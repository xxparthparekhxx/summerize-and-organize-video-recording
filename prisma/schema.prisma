generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Recording {
  id            Int      @id @default(autoincrement())
  fileName      String
  filePath      String
  recordedAt    DateTime
  transcript    String   
  summary       String   
  duration      Int
  fileSize      Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}